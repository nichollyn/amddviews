<?xml version="1.0" encoding="utf-8"?>
<gem.sparseboolean.amddviews.AdaptableDragDropView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:id="@+id/file_item_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="#00ffffff">

    <ImageView
            android:id="@+id/dragging_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    <ImageView
        android:id="@+id/drag_ready_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <LinearLayout
            android:id="@+id/normal_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/app_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="1dp" />
        <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp">

            <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_title_bg"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:textColor="@drawable/app_title_textcolor"
                    android:textIsSelectable="false"
                    android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</gem.sparseboolean.amddviews.AdaptableDragDropView>